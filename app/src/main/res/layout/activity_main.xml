<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pinkfloyded.remindmein.MainActivity">


    <com.pinkfloyded.remindmein.TimerBackgroundView
        android:id="@+id/timerBackgroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.65"/>

    <TextView
        android:id="@+id/minsRemainingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/minsLabelTextView"
        app:layout_constraintEnd_toEndOf="@+id/timerBackgroundView"
        app:layout_constraintStart_toStartOf="@+id/timerBackgroundView"
        app:layout_constraintTop_toBottomOf="@+id/timerBackgroundView"
        tools:text="19"/>

    <TextView
        android:id="@+id/minsLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mins"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/timerBackgroundView"
        app:layout_constraintEnd_toEndOf="@+id/minsRemainingTextView"
        app:layout_constraintStart_toStartOf="@+id/minsRemainingTextView"
        app:layout_constraintTop_toBottomOf="@+id/minsRemainingTextView"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timerBackgroundView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Water heater"/>

    <Button
        android:id="@+id/controlButton"
        android:layout_width="0dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/timerBackgroundView"
        app:layout_constraintStart_toStartOf="@+id/timerBackgroundView"
        app:layout_constraintTop_toBottomOf="@+id/timerBackgroundView"
        tools:text="Cancel"/>


</androidx.constraintlayout.widget.ConstraintLayout>
